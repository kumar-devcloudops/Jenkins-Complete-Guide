pipeline {
    agent any
    environment {
        RELEASE='1.04'
    }
    stages {
        stage('Build') {
            agent any
            environment {
                LOG_LEVEL='DEBUG'
            }
            steps {
                echo "Building release ${RELEASE} with log level ${LOG_LEVEL}..."
            }
        }
            stage ('deploy approval') {
                input {
                    message 'Approve Deployment?'
                    ok 'Approve'
                    parameters {
                        string(name: 'DEPLOY_ENV', defaultValue: 'staging', description: 'Deployment environment')
                    }
                }
            }
        }
    post {
        always {
             echo 'This will run after the stages are complete, regardless of success or failure.'
        }
    }
}

