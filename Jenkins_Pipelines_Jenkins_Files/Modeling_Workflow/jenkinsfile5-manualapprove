pipeline {
    agent any
    environment {
        RELEASE='1.04'
    }
    stages {
        stage('Build') {
            agent any
            environment {
                LOG_LEVEL='DEBUG'
            }
            steps {
                echo "Building release ${RELEASE} with log level ${LOG_LEVEL}..."
            }
            stage ('deploy approval') {
                input {
                    message 'Approve Deployment?'
                    ok 'Approve'
                    parameters {
                        string(name: 'DEPLOY_ENV', defaultValue: 'staging', description: 'Deployment environment')
                    }
                }
            }
            post {
                always {
                    echo 'This will always run after the deploy approval stage.'
                }
                sucess {
                    echo "Deploying release ${RELEASE} to environment ${DEPLOY_ENV}"
                }
                aborted {
                    echo "Deployment aborted. Release ${RELEASE} will not be deployed."
                }
            }
        }
    }
}